
@{
    ViewBag.Title = "Index";
    Layout = null;

}
<head>
    <style>
        .div {
            background-color: #333;
            overflow: hidden;
            height:10%;
        }
        .active {
            float: left;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
            background-color:red;
        }
        .inn {
            float: left;
            color: red;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }
        .input{
            width:100%;
        }
        .div inn:hover {
            background-color: #ddd;
            color: black;
        }
        .table {
            width: 50%;
            margin-bottom: 20px;
            border: 1px solid;
        }
        .btn {
            width: 39%;
        }
        th {
            background-color: indianred;
            border: 1px solid;
            padding: 4px;
        }

        td {
            background-color: darksalmon;
            border: 1px solid;
            padding: 4px;
        }

        body {
            background-color: bisque;
        }
    </style>
    
</head>
<div class="div">   
    <div>
        <form action="~/Home/Index">
            <input class="inn" type="submit" value="Home" />
        </form>
     </div>
    <div>
        <form action="~/Register/Registruj">
            <input class="active" type="submit" value="Registruj se" />
        </form>
    </div>
    <div>
        <form action="~/Register/Index">
            <input class="inn" type="submit" value="Uloguj se" />
        </form>
    </div>
</div>
<div>
    @ViewBag.Message
</div>
<h2>Registracija</h2>

<form action="~/Register/Registruj" method="post">
    <table class="table">
        <tr>
            <td>Korisnicko ime:</td>
            <td><input input class="input" type="text" name="korisnickoime" /></td>
        </tr>
        <tr>
            <td>Lozinka:</td>
            <td><input input class="input" type="password" name="lozinka" /></td>
        </tr>
        <tr>
            <td>Ime:</td>
            <td><input input class="input" type="text" name="ime" /></td>
        </tr>
        <tr>
            <td>Prezime:</td>
            <td><input class="input" type="text" name="prezime" /></td>
        </tr>
        <tr>
            <td>Pol:</td>
            <td><label>Muski</label><input type="radio" name="pol" value="M" /><label>Zenski</label><input type="radio" value="Z" name="pol" /></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td><input input class="input" type="text" name="email" /></td>
        </tr>

        <tr>
            <td>Datum rodjenja:</td>
            <td><input type="date" name="datumrodjenja" /></td>
        </tr>
       

        <tr>
            <td colspan="2">
                <input class="btn" type="submit" value="Registruj" />
            </td>
        </tr>
    </table>
</form>
