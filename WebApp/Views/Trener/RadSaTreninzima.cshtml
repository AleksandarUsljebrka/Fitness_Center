
@{
    ViewBag.Title = "RadSaTreninzima";
    Layout = null;
}

<head>
    <style>
        .div {
            background-color: #333;
            overflow: hidden;
            height: 10%;
        }

        .active {
            float: left;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
            background-color: red;
        }

        .inn {
            float: left;
            color: red;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .div inn:hover {
            background-color: #ddd;
            color: black;
        }

        .table {
            width: 100%;
            margin-bottom: 20px;
            border: 1px solid;
        }

        th {
            background-color: indianred;
            border: 1px solid;
            padding: 4px;
        }

        td {
            background-color: darksalmon;
            border: 1px solid;
            padding: 4px;
        }

        body {
            background-color: bisque;
        }
        .desni{
            float:right;
        }
    </style>

</head>
<div class="div">
    <div>
        <form action="~/Trener/Index">
            <input class="inn" type="submit" value="Home" />
        </form>
    </div>

    <div>
        <form action="~/Register/Izloguj">
            <input class="inn" type="submit" value="Izloguj se" />
        </form>
    </div>
    <div>
        <form action="~/Trener/RadSaTreninzima">
            <input class="active" type="submit" value="Rad sa treninzima" />
        </form>
    </div>
    <div class="desni">
        <form action="~/Trener/Profil">
            <input class="inn" type="submit" value="Moj profil" />
        </form>
    </div>
</div>

<table class="table">
    <tr>
        <th colspan="7">Vasi treninzi</th>
    </tr>
    <tr>
        <th>Naziv treninga</th>
        <th>Tip treninga</th>
        <th>Trajanje</th>
        <th>Datum i vreme treninga</th>
        <th>Maksimalan kapacitet</th>
        <th>Trenutno prijavljenih</th>
        <th></th>


    </tr>
    @foreach (var item in ViewBag.treninzi)
    {
        <tr>
            <td>@item.Naziv</td>
            <td>@item.VrstaTreninga</td>
            <td>@item.TrajanjeTreninga</td>
            <td>@item.VremeTreninga</td>
            <td>@item.MaxPosetilaca</td>
            <td>@item.TrenutnoPosetilaca</td>
            <td>
                <div align="center">
                    <form method="post" action="~/Trener/SpisakPosetilaca">
                        <input type="hidden" value="@item.TreningId" name="treningid" />
                        <input type="submit" value="Vidi posetioce" />
                    </form>
                </div>
                <div align="center">

                    <form method="post" action="~/Trener/ModifikujTrening">
                        <input type="hidden" value="@item.TreningId" name="treningid" />
                        <input type="submit" value="Izmeni" />
                    </form>
                </div>
                <div align="center">
                    <form method="post" action="~/Trener/ObrisiTrening">
                        <input type="hidden" value="@item.TreningId" name="treningid" />
                        <input type="submit" value="Obrisi" />
                    </form>
                </div>
            </td>

        </tr>
    }
    <tr>
        <th colspan="7">
            <form action="~/Trener/DodajTrening">
                <input type="submit" value="Dodaj trening" />
            </form>
        </th>
    </tr>
    <tr>
        <th colspan="7">
            <form action="~/Trener/Istorija">
                <input type="submit" value="Istorija treninga" />
            </form>
        </th>
    </tr>
</table>