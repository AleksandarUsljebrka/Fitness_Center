
@{
    ViewBag.Title = "DodajTrening";
    Layout = null;
}
<head>

    <style>
        .div {
            background-color: #333;
            overflow: hidden;
            height: 10%;
        }

        .div-forma {
            float: left;
        }

        .active {
            float: left;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
            background-color: red;
        }

        .inn {
            float: left;
            color: red;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .input {
            width: 100%;
        }

        .div inn:hover {
            background-color: #ddd;
            color: black;
        }

        .table {
            width: 50%;
            margin-bottom: 20px;
            border: 1px solid;
            float: left;
        }

        .btn {
            width: 39%;
        }

        th {
            background-color: indianred;
            border: 1px solid;
            padding: 4px;
        }

        td {
            background-color: darksalmon;
            border: 1px solid;
            padding: 4px;
        }

        body {
            background-color: bisque;
        }
    </style>

</head>
<h1>Dodaj Trening</h1>
<h2>@ViewBag.poruka</h2>
<div>

    <div>
        <form action="~/Trener/DodajTrening" method="post">
            <table class="table">
                <tr>
                    <th colspan="2">Dodavanje treninga</th>
                </tr>
                <tr>
                    <td>Naziv treninga:</td>
                    <td><input input class="input" type="text" name="naziv" /></td>
                </tr>
                <tr>
                    <td>Tip:</td>
                    <td>
                        <select name="vrstaTreninga">
                            <option value="0">SELECT</option>
                            @foreach (var item in ViewBag.treninzi)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </td>
                </tr>
                
                <tr>
                    <td>Trajanje:</td>
                    <td><input class="input" type="number" name="trajanjeTreninga" /></td>
                </tr>
                <tr>
                    <td>Vreme treninga:</td>
                    <td><input class="input" type="datetime" name="vremeTreninga" /></td>   
                </tr>
                <tr>
                    <td>Maksimalan kapacitet:</td>
                    <td><input input class="input" type="number" name="maxPosetilaca" /></td>
                </tr>

                
               
                <tr>
                    <td colspan="2">
                        <input class="input" type="hidden" value="0" name="trenutnoPosetilaca" />
                        <input class="btn" type="submit" value="Dodaj" />
                    </td>
                </tr>
            </table>
        </form>
    </div>

</div>