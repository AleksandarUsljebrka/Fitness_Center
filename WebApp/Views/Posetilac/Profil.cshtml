
@{
    ViewBag.Title = "Index";
    Layout = null;

}
<head>
    <style>
        .div {
            background-color: #333;
            overflow: hidden;
            height: 10%;
        }

        .active {
            float: right;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
            background-color: red;
        }

        .inn {
            float: left;
            color: red;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .input {
            width: 100%;
        }

        .div inn:hover {
            background-color: #ddd;
            color: black;
        }

        .table {
            width: 50%;
            margin-bottom: 20px;
            border: 1px solid;
        }

        .btn {
            width: 39%;
        }

        th {
            background-color: indianred;
            border: 1px solid;
            padding: 4px;
        }

        td {
            background-color: darksalmon;
            border: 1px solid;
            padding: 4px;
        }

        body {
            background-color: bisque;
        }
    </style>
    
</head>
<div class="div">
    <div>
        <form action="~/Home/Index">
            <input class="inn" type="submit" value="Home" />
        </form>
    </div>
    <div>
        <form action="~/Register/Izloguj">
            <input class="inn" type="submit" value="Izloguj se" />
        </form>
    </div>
    <div>
        <form action="~/Posetilac/Profil">
            <input class="active" type="submit" value="Moj profil" />
        </form>
    </div>
</div>

<h2>Moj profil</h2>

<form action="~/Posetilac/Izmeni" method="post">
    <table class="table">
        <tr>
            <td>Korisnicko ime:</td>
            <td><input input class="input" type="text" value="@ViewBag.korisnik.KorisnickoIme" name="korisnickoime" /></td>
        </tr>
        <tr>
            <td>Lozinka:</td>
            <td><input input class="input" value="@ViewBag.korisnik.Lozinka" type="password" name="lozinka" /></td>
        </tr>
        <tr>
            <td>Ime:</td>
            <td><input input class="input" type="text" value="@ViewBag.korisnik.Ime" name="ime" /></td>
        </tr>
        <tr>
            <td>Prezime:</td>
            <td><input class="input" type="text" value="@ViewBag.korisnik.Prezime" name="prezime" /></td>
        </tr>
        <tr>
            <td>Pol:</td>
            <td>
                <label>Muski</label>
                @if (Convert.ToString(ViewBag.korisnik.Pol).Equals("M"))
                {
                    <input type="radio" name="pol" value="M" checked="checked" />
                }
                else
                {
                    <input type="radio" name="pol" value="M" />

                }
                <label>Zenski</label>
                @if (Convert.ToString(ViewBag.korisnik.Pol).Equals("Z"))
                {
                    <input type="radio" name="pol" value="Z" checked="checked" />
                }
                else
                {
                    <input type="radio" name="pol" value="Z" />

                }
                </td>

</tr>
        <tr>
            <td>Email:</td>
            <td><input class="input" type="text" value="@ViewBag.korisnik.Email" name="email" /></td>
        </tr>

        <tr>
            <td>Datum rodjenja:</td>
            <td><input type="date"  value="@ViewBag.godina-@ViewBag.mesec-@ViewBag.dan" name="datumrodjenja" /></td>
        </tr>


        <tr>
            <td colspan="2">
                <input class="btn" type="submit"  value="Izmeni" />
            </td>
        </tr>
    </table>
</form>
