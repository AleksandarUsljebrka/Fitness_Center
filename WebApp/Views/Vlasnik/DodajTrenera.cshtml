
@{
    ViewBag.Title = "Index";
    Layout = null;

}
<head>
    <style>
        .div {
            background-color: #333;
            overflow: hidden;
            height: 10%;
        }
        .div-forma{
            float:left;
        }

        .active {
            float: left;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
            background-color: red;
        }

        .inn {
            float: left;
            color: red;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .input {
            width: 100%;
        }

        .div inn:hover {
            background-color: #ddd;
            color: black;
        }

        .table {
            width: 50%;
            margin-bottom: 20px;
            border: 1px solid;
            float:left;
        }

        .btn {
            width: 39%;
        }

        th {
            background-color: indianred;
            border: 1px solid;
            padding: 4px;
        }

        td {
            background-color: darksalmon;
            border: 1px solid;
            padding: 4px;
        }

        body {
            background-color: bisque;
        }
        h1{
            font-family:'Arial Rounded MT';
        }
    </style>
    
</head>
<div class="div">
    <div>
        <form action="~/Home/Index">
            <input class="inn" type="submit" value="Home" />
        </form>
    </div>

    <div>
        <form action="~/Register/Izloguj">
            <input class="inn" type="submit" value="Izloguj se" />
        </form>
    </div>
    <div>
        <form action="~/Vlasnik/RadSaTrenerima">
            <input class="active" type="submit" value="Rad sa trenerima" />
        </form>
    </div>
    <div>
        <form action="~/Vlasnik/RadSaFitnesCentrima">
            <input class="inn" type="submit" value="Rad sa fitnes centrima" />
        </form>
    </div>
</div>

<h2>@ViewBag.Message</h2>
<div>
    
    <div>
        <form action="~/Vlasnik/DodajTrenera" method="post">
            <table class="table">
                <tr>
                    <th colspan="2">Registracija trenera</th>
                </tr>
                <tr>
                    <td>Korisnicko ime:</td>
                    <td><input input class="input" type="text" name="korisnickoIme" /></td>
                </tr>
                <tr>
                    <td>Lozinka:</td>
                    <td><input input class="input" type="password" name="lozinka" /></td>
                </tr>
                <tr>
                    <td>Ime:</td>
                    <td><input input class="input" type="text" name="ime" /></td>
                </tr>
                <tr>
                    <td>Prezime:</td>
                    <td><input class="input" type="text" name="prezime" /></td>
                </tr>
                <tr>
                    <td>Pol:</td>
                    <td><label>Muski</label><input type="radio" name="pol" value="M" /><label>Zenski</label><input type="radio" value="Z" name="pol" /></td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td><input input class="input" type="text" name="email" /></td>
                </tr>

                <tr>
                    <td>Datum rodjenja:</td>
                    <td><input type="date" name="datumrodjenja" /></td>
                </tr>
                <tr>
                    <td>Fitnes centar:</td>
                    <td>
                        <select name="fitnesCentarId">
                            <option value="0">SELECT</option>
                            @foreach (var item in ViewBag.fitnesCentri)
                            {
                                <option value="@item.Id">@item.Id</option>
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input class="btn" type="submit" value="Dodaj" />
                    </td>
                </tr>
            </table>
        </form>
    </div>
    
</div>