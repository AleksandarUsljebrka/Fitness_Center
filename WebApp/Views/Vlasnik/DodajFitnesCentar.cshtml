
@{
    ViewBag.Title = "DodajFitnesCentar";
    Layout = null;
}


<head>
    <style>
        .div {
            background-color: #333;
            overflow: hidden;
            height: 10%;
        }

        .active {
            float: left;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
            background-color: red;
        }

        .inn {
            float: left;
            color: red;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .input {
            width: 100%;
        }

        .div inn:hover {
            background-color: #ddd;
            color: black;
        }

        .table {
            width: 50%;
            margin-bottom: 20px;
            border: 1px solid;
        }

        .btn {
            width: 39%;
        }

        th {
            background-color: indianred;
            border: 1px solid;
            padding: 4px;
        }

        td {
            background-color: darksalmon;
            border: 1px solid;
            padding: 4px;
        }

        body {
            background-color: bisque;
        }

        
    </style>
</head>


<div>
    @ViewBag.Message
</div>
<form method="post" action="~/Vlasnik/DodajFitnesCentar">
    <table class="table">
        <tr>
            <th colspan="2">Dodaj novi fitnes centar</th>
        </tr>
        <tr>
            <td>Naziv:</td>
            <td>
                <input class="input" type="text" name="naziv" />
            </td>
        </tr>
        <tr>
            <td>Ulica:</td>
            <td>
                <input class="input" type="text" name="ulica" />
            </td>
        </tr>
        <tr>
            <td>Broj:</td>
            <td>
                <input class="input" type="number" name="broj" />
            </td>
        </tr>
        <tr>
            <td>Mesto:</td>
            <td>
                <input class="input" type="text" name="mesto" />
            </td>
        </tr>
        <tr>
            <td>Postanski broj:</td>
            <td>
                <input class="input" type="number" name="postanskiBroj" />
            </td>
        </tr>
        <tr>
            <td>Godina otvaranja:</td>
            <td>
                <input class="input" type="number" name="godinaOtvaranja" />
            </td>
        </tr>
        <tr>
            <td>Vlasnik:</td>
            <td>
                <input class="input" type="text" name="korisnickoIme" />
            </td>
        </tr>
        <tr>
            <td>Cena mesecne clanarine:</td>
            <td>
                <input class="input" type="number" name="cenaMesecno" />
            </td>
        </tr>
        <tr>
            <td>Cena godisnje clanarine:</td>
            <td>
                <input class="input" type="number" name="cenaGodisnje" />
            </td>
        </tr>
        <tr>
            <td>Cena jednog treninga:</td>
            <td>
                <input class="input" type="number" name="cenaJednogTreninga" />
            </td>
        </tr>
        <tr>
            <td>Cena jednog grupnog treninga:</td>
            <td>
                <input class="input" type="number" name="cenaJednogGrupnog" />
            </td>
        </tr>
        <tr>
            <td>Cena jednog sa trenerom:</td>
            <td>
                <input class="input" type="number" name="cenaJednogTrener" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input class="btn" type="submit" value="Dodaj" />
            </td>
        </tr>
    </table>
</form>
