@using WebApp.Models
@model IEnumerable<Korisnik>
@{
    ViewBag.Title = "RadSaTrenerima";
    Layout = null;
}

<head>
    <style>
        .div {
            background-color: #333;
            overflow: hidden;
            height: 10%;
        }

        .active {
            float: left;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
            background-color: red;
        }

        .inn {
            float: left;
            color: red;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .div inn:hover {
            background-color: #ddd;
            color: black;
        }

        .table {
            width: 100%;
            margin-bottom: 20px;
            border: 1px solid;
        }

        th {
            background-color: indianred;
            border: 1px solid;
            padding: 4px;
        }

        td {
            background-color: darksalmon;
            border: 1px solid;
            padding: 4px;
        }

        body {
            background-color: bisque;
        }
        .btnDodaj{
            align-content:center;
        }
       
        </style>
</head>

<div class="div">
    <div>
        <form action="~/Home/Index">
            <input class="inn" type="submit" value="Home" />
        </form>
    </div>

    <div>
        <form action="~/Register/Izloguj">
            <input class="inn" type="submit" value="Izloguj se" />
        </form>
    </div>
    <div>
        <form action="~/Vlasnik/RadSaTrenerima">
            <input class="active" type="submit" value="Rad sa trenerima" />
        </form>
    </div>
    <div>
        <form action="~/Vlasnik/RadSaFitnesCentrima">
            <input class="inn" type="submit" value="Rad sa fintes centrima" />
        </form>
    </div>
</div>

<h2>Treneri</h2>


<table id="myTable" class=table>

    <tr>
        <th onclick="sortTable(0)">Korisnicko ime</th>
        <th onclick="sortTable(1)">Ime</th>
        <th onclick="sortTable(2)">Prezime</th>
        <th>Fitnes centar</th>
        <th></th>
    </tr>
    @foreach (Korisnik item in ViewBag.treneri)
    {

        <tr>
            <td name="korisnickoIme">@item.KorisnickoIme</td>
            <td name="adresa">@item.Ime</td>
            <td>@item.Prezime</td>
            <td>@item.FitnesCentarId</td>
            <td>
                <div>
                    <form method="post" action="~/Vlasnik/DetaljnoTrener">
                        <input type="hidden" name="korisnickoIme" value="@item.KorisnickoIme" />
                        <input type="submit" value="Detalji" />
                    </form>
                </div>
                <div>
                    <form method="post" action="~/Vlasnik/Blokiraj">
                        <input type="hidden" name="korisnickoIme" value="@item.KorisnickoIme" />
                        <input type="submit" value="Blokiraj" />
                    </form>
                </div>

            </td>
        </tr>

    }
    <tr>
        <th colspan="5">
            <form action="~/Vlasnik/DodajTrenera">
                <input class="" type="submit" value="Dodaj trenera" />
            </form>
        </th>
    </tr>
</table>
